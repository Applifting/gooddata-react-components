{
  "name": "@gooddata/data-layer",
  "version": "0.0.18",
  "description": "",
  "main": "dist/index.js",
  "jsnext:main": "es/index.js",
  "module": "es/index.js",
  "files": [
    "dist"
  ],
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "dependencies": {
    "lodash-es": "4.17.4"
  },
  "devDependencies": {
    "@types/jest": "18.1.1",
    "@types/lodash-es": "4.14.5",
    "@types/node": "7.0.8",
    "jest": "19.0.2",
    "jest-junit": "1.3.0",
    "ts-jest": "19.0.14",
    "tslint": "4.4.2",
    "typescript": "2.2.2"
  },
  "scripts": {
    "test": "jest",
    "watchTest": "jest --watch",
    "dev": "rm -rf dist && tsc --outDir dist --watch",
    "build:commonjs": "rm -rf dist && tsc --outDir dist",
    "build:es2015": "rm -rf es && tsc -p tsconfig.es2015.json --outDir es",
    "build": "yarn build:commonjs && yarn build:es2015",
    "prepublish": "yarn build",
    "validate": "tsc -p tsconfig.base.json --noEmit && tslint -c tslint.json 'src/**/*.ts'"
  },
  "author": "GoodData",
  "license": "UNLICENSED",
  "jest": {
    "globals": {
      "__TS_CONFIG__": {
        "allowJs": true
      }
    },
    "transform": {
      ".(ts|js)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!lodash-es)"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
